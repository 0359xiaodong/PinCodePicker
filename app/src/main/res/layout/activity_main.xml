<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pin_code="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363F45"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.github.polok.pincodepicker.view.PinCodeRecyclerView
        android:id="@+id/pin_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#3E464C"
        pin_code:pin_code_length="6"
        pin_code:pin_code_type="TEXT"/>

    <com.github.polok.pincodepicker.view.PinCodeRecyclerView
        android:id="@+id/pin_code_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="#3E464C"
        pin_code:pin_code_length="6"
        pin_code:pin_code_type="NUMBER"
        pin_code:pin_code_animation_current="@animator/blinking_default_animator"
        pin_code:pin_code_filled_out_drawable="@drawable/white_circle"/>

</LinearLayout>
